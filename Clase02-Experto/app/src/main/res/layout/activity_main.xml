<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/edt_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese Password"
        android:inputType="textPassword"/>

    <CheckBox
        android:id="@+id/chk_ver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver"/>

    <EditText
        android:id="@+id/edt_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="IME Action Next -> Bars"
        android:imeOptions="actionNext"
        android:inputType="text"/>

    <EditText
        android:id="@+id/edt_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="IME Action Done"
        android:imeOptions="actionDone"
        android:inputType="text"/>

    <EditText
        android:id="@+id/edt_go"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="IME Action Go -> RadioButtons"
        android:imeOptions="actionGo"
        android:inputType="text"/>

    <EditText
        android:id="@+id/edt_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="IME Action Search"
        android:imeOptions="actionSearch"
        android:inputType="text"/>

    <EditText
        android:id="@+id/edt_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="IME Action Send -> Dialogs"
        android:imeOptions="actionSend"
        android:inputType="text"/>


    <AutoCompleteTextView
        android:id="@+id/autocomplete_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Autocompletable"
        android:completionThreshold="1"/>
</LinearLayout>
