<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ar.com.sebasira.clase02.BarsActivity"
    android:orientation="vertical">

    <!-- OJO CON EL WIDTH Y LA CANTIDAD DE ESTRELLAS -->
    <RatingBar
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stepSize="0.25"
        android:numStars="5"/>

    <Button
        android:id="@+id/btnSetRating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Setear Rating"/>


    <SeekBar
        android:id="@+id/seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:max="100"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSetSeek_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Setear Rating"/>

        <Button
            android:id="@+id/btnSetSeek_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Setear Rating Sec."/>

    </LinearLayout>


</LinearLayout>
